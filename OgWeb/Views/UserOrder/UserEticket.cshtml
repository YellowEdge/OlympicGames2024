@model GenerateQRCodeModel

@{
    ViewData["Title"] = "E-Ticket";
}

<h4>E-Ticket</h4>
<div>
    <p>
        <a href="UserOrders">Back to List</a>
    </p>
</div>

<div class="row">
    <div class="col-lg-6 m-auto">
        @if(Model.QRCodeImageUrl != null)
        {
            <div class="w-50 m-auto">
                <img src="@Model.QRCodeImageUrl" class="img-fluid w-100 h-100 mb-3"/>
                <a href="@Model.QRCodeImageUrl" class="btn btn-primary w-100" download="QRCode.png">Download</a>
            </div>
        }
        else
        {
            <h3 class="text-bg-danger">Check your payment status !</h3>
        }
    </div>
</div>
