@page
@model OgWeb.Pages.Sites.DeleteModel

<form method="post">
    <input hidden asp-for="Site.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Delete Site</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Site.Addresse"></label>
            <input asp-for="@Model.Site.Addresse" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Site.City"></label>
            <input asp-for="Site.City" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px;">Delete</button>
        <a asp-page="Index" class="btn btn-secondary" style="width:150px;">Back to List</a>
    </div>


</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
